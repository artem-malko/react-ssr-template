{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*"
      ]
    },
    "esModuleInterop": true,
    "declaration": false,
    "declarationMap": false,
    "moduleResolution": "node",
    "module": "commonjs",
    "incremental": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "isolatedModules": true,
    "alwaysStrict": true,
    "pretty": false,
    "jsx": "react-jsx",
    "strict": true,
    "strictNullChecks": true,
    "target": "es6",
    "noEmitHelpers": true,
    "importHelpers": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "lib": [
      "es6",
      "es2016",
      "es2017",
      "es2018",
      "dom"
    ]
  },
  "include": ["src/**/*", "webpack/**/*", "project.d.ts"],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false
}
